{
    "name": "pr",
    "description": "Un proyecto PHP utilizando Phalcon y MySQL",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "phalcon/cphalcon": "^5.0",
        "vlucas/phpdotenv": "^5.4",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
